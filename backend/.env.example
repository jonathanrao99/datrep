# AI Configuration - use OpenRouter or OpenAI
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key
OPENROUTER_MODEL=arcee-ai/trinity-large-preview:free
# Or use OpenAI instead:
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional API protection for analysis/chat routes
# If set, send Authorization: Bearer <API_AUTH_TOKEN>
API_AUTH_TOKEN=

# Basic per-IP limiter for protected routes
RATE_LIMIT_PER_MINUTE=30

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/datrep

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600  # 100MB in bytes

# Environment
ENV=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000 